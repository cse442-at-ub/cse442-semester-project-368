<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meetingReqLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20">

        <TextView
            android:id="@+id/tvMeetingReqTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:text="Name"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:clickable="true"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:stateListAnimator="@null"
            android:textSize="13dp" />

        <Button
            android:id="@+id/status_action"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:clickable="true"
            android:text="Action"
            android:textColor="@color/colorTextBlack"
            android:stateListAnimator="@null"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMeetingReqTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meeting Time"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvMeetingReqDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvMeetingReqParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:textSize="15dp"/>
</LinearLayout>